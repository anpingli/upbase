 topdir=$(date +%Y%m%d%H%M)
 mkdir $topdir
 sysdir="$topdir/sysinfo/$i"
 logdir="$topdir/logs/$i"
 mkdir -p $sysdir
 mkdir -p $logdir
 echo "collection system information from remote"
 ansible all -m shell -a "/root/bin/collectsysinfo"
 echo "fetch system information from remote"
 ansible all -m fetch -a "src=/lib/systemd/system/docker* --dest=$sysdir"
 ansible all -m fetch -a "src=/usr/lib/systemd/system/openvswitch* --dest=$sysdir"
 ansible all -m fetch -a "src=/usr/lib/systemd/system/atomic-openshift* --dest=$sysdir"
 ansible all -m fetch -a "src=/etc/sysconfig/docker* --dest=$sysdir"
 ansible all -m fetch -a "src=/etc/sysconfig/openvswitch* --dest=$sysdir"
 ansible all -m fetch -a "src=/etc/sysconfig/atomic-openshift* --dest=$sysdir"
 ansible all -m fetch -a "src=/etc/origin --dest=$sysdir"
 ansible all -m fetch -a "src=/tmp/systeminfo --dest=$sysdir"
 ansible all -m fetch -a "src=/root/*.log --dest=$logdir"
 ansible all -m fetch -a "src=/var/log/messages --dest=$logdir"
 ansible all -m fetch -a "src=/var/log/containers --dest=$logdir"
 ansible all -m fetch -a "src=/var/log/openvswitch/*.log --dest=$logdir"

 mkdir "$sysdir/client"
 roc get nodes >> "$sysdir/client/ose-info-nodes"
 roc project default
 roc get all >> "$sysdir/client/ose-info-all"
 roc get template -n openshift  >> "$sysdir/client/ose-info-templates"
 roc get is -n openshift  >> "$sysdir/client/ose-info-is"
